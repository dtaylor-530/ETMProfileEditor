             xmlns:local="clr-namespace:ETMProfileEditor.Terminal"
             xmlns:viewmodel="clr-namespace:ETMProfileEditor.ViewModel;assembly=ETMProfileEditor.ViewModel"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
